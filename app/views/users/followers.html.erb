<h1>followers</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <ul>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </ul>
    </section>
  </aside>
  <div class="col-md-8">
    <section class="user_info">
      <ul>
        <% @users.each do |u| %>
          <li class="clearfix">
        <%= gravatar_for u %>
        <%= u.name %>
          </li>
        <% end %>
      </ul>
  </div>
</div>